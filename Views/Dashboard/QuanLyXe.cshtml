@{
    ViewBag.Title = "QuanLyXe";
    Layout = "~/Views/Dashboard/DashboardIndex.cshtml";
}
@Html.ActionLink("Tạo mới xe", "CreateXeKhach", "Dashboard", new { }, new { @class = "btn btn-primary" })
<br />
<div class="table-responsive">
    <!-- Sử dụng table-responsive để làm cho bảng ngăn cuộn trên màn hình nhỏ -->
    <table class="table table-bordered table-striped">
        <!-- Sử dụng lớp của Bootstrap để tạo bảng đẹp hơn -->
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Biển số xe</th> <!-- Để căn giữa dùng text-center -->
                <th class="text-center">Loại xe</th>
                <th class="text-center">Số ghế</th>
                <th class="text-center">Tên Loại Xe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var xe in Model)
            {
                <tr>
                    <td class="text-center">@xe.IdXeKhach</td>
                    <td class="text-center">@xe.BienSoXe</td>
                    <td class="text-center">@xe.LoaiXe</td>
                    <td class="text-center">@xe.SoGhe</td>
                    <td class="text-center">@xe.TenLoaiXe</td>
                    <td class="text-center">@Html.ActionLink("Sửa", "EditXeKhach", "Dashboard", new { id = xe.IdXeKhach }, new { @class = "btn btn-warning" })</td>
                    <td class="text-center">@Html.ActionLink("Xoá", "RemoveXeKhach", "Dashboard", new { id = xe.IdXeKhach }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

